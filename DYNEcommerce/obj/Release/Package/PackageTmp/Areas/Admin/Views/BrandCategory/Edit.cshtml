@model Domain.BrandmasterDomain

@{
    ViewBag.Title = "EditBrand";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}


<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>
                            Edit Brand
                            <small>Bigdeal Admin panel</small>
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">Brand </li>
                        <li class="breadcrumb-item active">Edit Brand </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("Edit", "BrandCategory"))
    {
        @Html.AntiForgeryToken()
        <div class="container-fluid">
            <div class="row">

                <div class="col-sm-12">
                    <div class="card tab2-card">
                        <div class="card-header">
                            <h5> Edit Category Brand</h5>
                        </div>
                        <div class="card-body">


                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            @Html.HiddenFor(model => model.GRP_CD)

                            <div class="form-group row">
                                <div class="col-xl-3 col-md-4">
                                    <label for="validationCustom0"><span>*</span>Category</label>
                                </div>

                                <div class="col-xl-8 col-md-7">
                                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="col-xl-3 col-md-4">
                                    <label for="validationCustom0"><span>*</span>BrandName</label>
                                </div>

                                <div class="col-xl-8 col-md-7">
                                    @Html.DropDownListFor(model => model.BrandId, (IEnumerable<SelectListItem>)Model.Brands, "--Select Brand--", new { @class = "form-control" })

                                    @Html.ValidationMessageFor(model => model.BrandName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="pull-right">
                                <a href="@Url.Action("Index", "BrandCategory")" class="btn btn-success">
                                    Back to List
                                </a>
                                @*<button type="button" class="btn btn-primary">Save</button>*@
                                <input type="submit" class="btn btn-primary" value="Save" id="btnSubmit" />
                            </div>


                        </div>

                    </div>

                </div>
                @if (ViewBag.Message != null)
                {
                    if (ViewBag.Message == "Success")
                    {
                        <div class="alert alert-success" role="alert" id="divSuccess">
                            Category Brand Edit Successfully..!!
                        </div>
                    }
                    if (ViewBag.Message == "Error")
                    {
                        <div class="alert alert-success" role="alert" id="divError">
                            Category Brand Already exists..!!
                        </div>
                    }
                }
            </div>
        </div>
    }
</div>